package mvu;

import java.awt.*;
import javax.swing.*;

public class FlightWindow {
	private static JFrame frame = new JFrame("Titel1");
	private static JPanel pane = new JPanel();
	private static JLabel jl1 = new JLabel("Abflugland");
	private static JLabel jl2 = new JLabel("Zielland");
	private static JLabel jb2 = new JLabel("Test");
	static DefaultComboBoxModel countries1 = new DefaultComboBoxModel();
	static DefaultComboBoxModel countries2 = new DefaultComboBoxModel();
	
	
	public static void createGUI(){
		frame.setVisible(true);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setSize(500, 500);
		frame.setResizable(false);
		
		pane.setLayout(new GridBagLayout());
		
		GridBagConstraints c = new GridBagConstraints();
		c.insets = new Insets(5,5,5,5);
		
		c.gridx = 0;
		c.gridy = 0;
		pane.add(jl1,c);
		
		c.gridx = 6;
		c.gridy = 0;
		pane.add(jl2,c);
		
		c.gridx = 0;
		c.gridy = 1;
		//TODO: Dynamische auslesung der L‰nder von der Datenbank
		//Eine Methode mit einem Parameter die das ausgew‰hlte Land ausschlieﬂt aus der 2ten Liste
		countries1.addElement("item01");
		countries1.addElement("item02");
		JComboBox comboCountries1 = new JComboBox(countries1);
		JComboBox comboCountries2 = new JComboBox(countries2);
		pane.add(comboCountries1,c);
		
		c.gridx = 1;
		c.gridy = 1;
		countries2.addElement("item01");
		countries2.addElement("item02");
		frame.setLocationRelativeTo(null);
		frame.setContentPane(pane);
	}
	
	public static void main(String[] args){
	createGUI();
	}
}
