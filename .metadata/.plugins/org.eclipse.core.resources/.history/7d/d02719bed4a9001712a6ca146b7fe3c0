		c.gridy = 6;
		c.weightx=1.;
	    c.fill=GridBagConstraints.HORIZONTAL;
		JLabel flightnrLabel = new JLabel("Flightnr:");
		bPanel.add(flightnrLabel,c);
		
		c.gridx = 1;
		c.gridy = 6;
		c.weightx=1.;
	    c.fill=GridBagConstraints.HORIZONTAL;
